<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Medicine"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginBottom="24dp" />

        <!-- Medicine Name  -->
        <EditText
            android:id="@+id/inputMedicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medicine Name"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text" />

        <!-- Dosage -->
        <EditText
            android:id="@+id/inputDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dosage (e.g. 2 tablets)"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text" />

        <!-- sebelum/selepas makannya Dropdown -->
        <Spinner
            android:id="@+id/spinnerEatTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#FFFFFF"
            android:backgroundTint="#4CAF50" />

        <!-- time makan ubat  -->
        <EditText
            android:id="@+id/inputTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Reminder Time"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:focusable="false"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="24dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Medicine"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
