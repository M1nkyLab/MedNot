<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:background="#FFFFFF"
    tools:context=".User.TodayRemindersFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ Today's Medication Schedule"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Use RecyclerView instead of ListView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/todayRemindersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_reminder" />

    <TextView
        android:id="@+id/tvNoReminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No upcoming medication today!"
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âœ… Medication History Log"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <!-- Use RecyclerView for the history log as well -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicationLogRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_reminder" />

    <TextView
        android:id="@+id/tvNoHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No medication history found."
        android:gravity="center"
        android:visibility="gone"
        android:layout_margin="16dp"/>

</LinearLayout>
