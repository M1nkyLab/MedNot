<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    tools:context=".User.Home_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome message -->
        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome, User"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Combined Today's Medicines & Schedule card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/rounded_card"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ’Š Todayâ€™s Medicines  Schedule"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Small summary text -->
            <TextView
                android:id="@+id/todayMedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading schedule..."
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <!-- Schedule list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todayRemindersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_reminder_today_medicines_schedule" />

            <TextView
                android:id="@+id/tvNoReminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No upcoming medication today!"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />
        </LinearLayout>

        <!-- Low Stock Alert card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_alert"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âš ï¸ Low Stock Alert"
                android:textStyle="bold"
                android:textColor="#B00020"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/lowStockCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading stock..."
                android:textColor="#B00020"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Medication History -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“œ Medication History Log"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/medicationLogRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_medication_histoy_log" />

        <TextView
            android:id="@+id/tvNoHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No medication history found."
            android:gravity="center"
            android:textColor="#666666"
            android:visibility="gone"
            android:layout_margin="16dp"/>
    </LinearLayout>

</ScrollView>
